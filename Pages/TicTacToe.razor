@page "/counter"
@using global::App

<h1>Tic-Tac-Toe</h1>

<div class="container-fluid" style="width:500px; padding-bottom:2rem;">
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-lg-2 text-center border-bottom border-right" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
        <div class="col col-lg-2 text-center border-bottom" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
        <div class="col col-lg-2 text-center border-bottom border-left" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
    </div>
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-lg-2 text-center border-right" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
        <div class="col col-lg-2 text-center" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
        <div class="col col-lg-2 text-center border-left" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
    </div>
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-lg-2 text-center border-top border-right" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
        <div class="col col-lg-2 text-center border-top" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
        <div class="col col-lg-2 text-center border-top border-left" @onclick="@IncrementCount">
            <span style="font-size:xx-large">X</span>
        </div>
    </div>
</div>

<div class="container-fluid" style="width:500px;">
    <div class="row justify-content-md-center align-items-center">
        <div class="col-12 text-left">
            <span style="font-size:large">Current count: @currentCount</span>
            @* <p></p> *@
        </div>
    </div>
    <div class="row justify-content-md-center align-items-center">
        <div class="col-10">
            <input style="line-height: 2rem; width: 26rem;"/>
        </div>
        <div class="col-2">
            <button class="btn btn-primary" @onclick="IncrementCount">Submit</button>
        </div>
    </div>
</div>






@code {
    // private TicTacToe.Sho 
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
